#include <iostream>
#define TOTAL 10
using namespace std;
int main()
{
    int i, age, yes = 0, no = 0;
    for (i = 1; i <= TOTAL; i++)
    {
        cout << "Enter your age : ";
        cin >> age;
        if (age >= 18)
        {
            cout << "You are eligible to vote.\n ";
            yes++;
        }
        else
        {
            cout << "You are not eligible to vote\n";
            no++;
        }
    }
    cout<<"Total eligible people : "<<yes<<endl;
    cout<<"Total non-eligible people : "<<no;

    return 0;
}
